<odoo>
    <data>
        <template id="report_delivery_slip_inherit" inherit_id="stock.report_delivery_document">
            <xpath expr="//div[@name='customer_address']/div/div[1]" position="replace">
                <span>
                    <strong>
                        Adresse de facturation et de livraison:
                    </strong>
                </span>
            </xpath>
            <xpath expr="//div[@name='customer_address']/div" position="inside">
                <span t-if="o.partner_id.contact_person">
                    <span class="contact_logo">
                        <img class="icon" id="contact_client_icon"
                             src="/renala/static/icons/telephone_icon2.png"/>
                    </span>
                    <span t-field="o.partner_id.contact_person"/>
                </span>
                <style>
                    img.icon{
                    width: 14px;
                    height: 14px;
                    }
                </style>
            </xpath>
            <xpath expr="//div[@class='page']/h2" position="after">
                <div class="container" id="informations">
                    <div class="row">
                        <div class="col-xs-3">
                            <strong>Date :</strong>
                        </div>
                        <div class="col-xs-3">
                            <strong>Référence :</strong>
                        </div>
                        <div class="col-xs-3">
                            <strong>Validité de l'offre :</strong>
                        </div>
                    </div>
                </div>
                <br/>
                <style>
                    div#informations {
                    padding: 5px;
                    margin-top: 25px;
                    margin-bottom: 25px;
                    }
                </style>
            </xpath>
            <xpath expr="//div[@class='page']" position="inside">
                <br/>
                <div id="condition_boxes">
                    <div class="container" id="boxes">
                        <div class="b">
                            <div class="row">
                                <span t-if="o.company_id.name">
                                    <span t-field="o.company_id.name"/>
                                </span>
                                <br/>
                            </div>
                            <div id="subbox"></div>
                        </div>

                        <div class="b">
                            <div class="row">
                                <strong>Préparé par :</strong>
                                <br/>
                            </div>
                            <div id="subbox"></div>
                        </div>

                        <div class="b">
                            <div class="row">
                                <strong>Contrôlé par :</strong>
                                <br/>
                            </div>
                            <div id="subbox"></div>
                        </div>

                        <div class="b">
                            <div class="row">
                                <strong>Réception :</strong>
                                <br/>
                            </div>
                            <div id="subbox"></div>
                        </div>
                        <br/>
                        <br/>
                        <br/>
                        <br/>
                    </div>
                </div>

                <style>
                    div.b {
                    display: inline-block;
                    width: 200px;
                    height: 200px;
                    margin-left: 5px;
                    margin-right: 5px;
                    }

                    div#boxes {
                    text-align: center;
                    }

                    div#subbox {
                    display: block;
                    width: 100%;
                    height: 200px;
                    border: 1px solid black;
                    }
                </style>
            </xpath>
        </template>
    </data>
</odoo>
