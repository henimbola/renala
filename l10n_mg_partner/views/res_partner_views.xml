<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
		<record id="wso_res_partner_inherit_form" model="ir.ui.view">
			<field name="name">res.partner.form</field>
			<field name="model">res.partner</field>
			<field name="inherit_id" ref="base.view_partner_form"/>
			<field name="arch" type="xml">
				<xpath expr="//field[@name='type']" position="before">
					<field name="ref1"/>
					<field name="ref2"/>
					<field name="partner_origin"/>
				</xpath>

				<xpath expr="//page[@name='sales_purchases']" position="after">
	            	<page string="Coordonnees fiscales">
	            		<group>
		            		<field name="nif"/>
		            		<field name="nstat" />
		            		<field name="cif"/>
		            		<field name="dcif" />
		            		<field name="rcs"/>
		            		<field name="drcs" />
	            		</group>
              		</page>
		        </xpath>

		        <xpath expr="/form/sheet/notebook/page/field[@name='child_ids']/form/sheet/group/group/field[@name='mobile']" position="after">
					<field name="signature_img"/>
 				</xpath>

 				<xpath expr="//field[@name='lang']" position="after">
			      <field name = "ntva" attrs="{'invisible':[('partner_origin','=','locale')]}"/>
			      <field name = "siret" attrs="{'invisible':[('partner_origin','=','locale')]}"/>
			    </xpath>

			</field>
		</record>
  	</data>
</openerp>